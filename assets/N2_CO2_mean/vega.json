{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "values": []
  },
  "transform": [
    {
      "calculate": "1000000*datum.b1.mean",
      "as": "mean"
    },
    {
      "calculate": "1000000*datum.b1.min",
      "as": "min"
    },
    {
      "calculate": "1000000*datum.b1.max",
      "as": "max"
    },
    {
      "calculate": "1000000*datum.b1.std",
      "as": "stDev"
    },
    {
      "window": [
        {
          "op": "row_number",
          "as": "index"
        }
      ],
      "frame": [null, null]
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "timeUnit": "binnedutcyearmonthdate",
      "type": "temporal",
      "title": "CO2 mean concentration [ppm]"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "area"
      },
      "encoding": {
        "y": {
          "field": "mean",
          "type": "quantitative",
          "title": "Mean Value"
        },
        "y2": {
          "field": "max",
          "type": "quantitative"
        },
        "fill": {
          "value": "#E1BE6A"
        },
        "opacity": {
          "value": 0.7
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "filled": false
      },
      "encoding": {
        "y": {
          "field": "mean",
          "type": "quantitative",
          "scale": {
            "zero": false
          },
          "title": "Value"
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "area"
      },
      "encoding": {
        "y": {
          "field": "min",
          "type": "quantitative"
        },
        "y2": {
          "field": "mean",
          "type": "quantitative"
        },
        "fill": {
          "value": "#40B0A6"
        },
        "opacity": {
          "value": 0.5
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {
            "value": 0.3,
            "param": "hover",
            "empty": false
          },
          "value": 0
        },
        "tooltip": [
          { "field": "date", "type": "temporal", "title": "Date" },
          {
            "field": "mean",
            "type": "quantitative",
            "format": ".1f",
            "title": "mean [ppm]"
          },
          {
            "field": "min",
            "type": "quantitative",
            "format": ".1f",
            "title": "minimum [ppm]"
          },
          {
            "field": "max",
            "type": "quantitative",
            "format": ".1f",
            "title": "maximum [ppm]"
          },
          {
            "field": "stDev",
            "type": "quantitative",
            "format": ".1f",
            "title": "std dev [ppm]"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["index"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        },
        { "name": "grid", "select": "interval", "bind": "scales" }
      ]
    }
  ],
  "background": "transparent"
}
